<Window x:Class="WpfSingleInstanceByEventWaitHandle.SingleInstanceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF. Single Instance Window" Height="300" Width="400" MinWidth="0" MinHeight="0" MaxWidth="600" MaxHeight="400">
    <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
        
        <RichTextBox BorderThickness="0">
            <FlowDocument>

                <Paragraph TextAlignment="Center" FontWeight="bold">
                    I'm a WPF app of a single Instance
                </Paragraph>

                <Paragraph TextAlignment="Center">
                    Try to run my another instance.
                </Paragraph>

                <Paragraph>
                    I was started from:
                    <LineBreak/>
                    <Run Name="MyLocationFullPath" Foreground="Red"></Run>
                    <LineBreak/>
                    Or copy my .exe file and try to run it from anoher location.
                </Paragraph>

            </FlowDocument>
        </RichTextBox>
        
    </Grid>
</Window>
